<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="t_tracker_ui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:t_tracker_ui"
    xmlns:state="using:t_tracker_ui.State"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="AppTipBackgroundBrush" Color="#2B2B2B"/>
          <SolidColorBrush x:Key="AppTipForegroundBrush" Color="#F3F3F3"/>
          <SolidColorBrush x:Key="AppTipBorderBrush"     Color="#44FFFFFF"/>
          <SolidColorBrush x:Key="AppBtnAccentBgBrush"   Color="#659287"/>
          <SolidColorBrush x:Key="AppBtnAccentFgBrush"   Color="#0B0B0B"/>
          <SolidColorBrush x:Key="AppBtnNeutralBgBrush"  Color="#3A3A3A"/>
          <SolidColorBrush x:Key="AppBtnNeutralFgBrush"  Color="#F3F3F3"/>
          <SolidColorBrush x:Key="AppBtnNeutralBorder"   Color="#5FFFFFFF"/>
        </ResourceDictionary>

      </ResourceDictionary.ThemeDictionaries>
            
            <!-- Other app resources here -->
            <Style x:Key="AppTeachingTipStyle" TargetType="TeachingTip">
                <Setter Property="Background" Value="{ThemeResource AppTipBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource AppTipForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource AppTipBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="IsLightDismissEnabled" Value="True"/>
                <Setter Property="PreferredPlacement" Value="Auto"/>
                <Setter Property="MaxWidth" Value="420"/>
            </Style>

            <!-- Accent action button -->
            <Style x:Key="AppTeachingTipActionButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="96"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Background" Value="{ThemeResource AppBtnAccentBgBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource AppBtnAccentFgBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource AppBtnAccentBgBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Neutral close/OK button -->
            <Style x:Key="AppTeachingTipCloseButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="96"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Background" Value="{ThemeResource AppBtnNeutralBgBrush}"/>
                <Setter Property="Foreground" Value="{ThemeResource AppBtnNeutralFgBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource AppBtnNeutralBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <state:UiState x:Key="UiState"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>